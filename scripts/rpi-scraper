#! /bin/bash

# mondays
date[1]='10/01/2012'
date[2]='10/08/2012'
date[3]='10/15/2012'
date[4]='10/22/2012'
date[5]='10/29/2012'
date[6]='11/05/2012'
date[7]='11/12/2012'
date[8]='11/19/2012'
date[9]='11/26/2012'
date[10]='11/30/2012'
date[11]='12/03/2012'
date[12]='12/10/2012'
date[13]='12/17/2012'
date[14]='12/24/2012'
date[15]='12/31/2012'
date[16]='01/07/2013'
date[17]='01/14/2013'
date[18]='01/21/2013'
date[19]='01/28/2013'
date[20]='02/04/2013'
date[21]='02/11/2013'
date[22]='02/18/2013'
date[23]='02/25/2013'
date[24]='03/04/2013'
date[25]='03/11/2013'
date[26]='03/18/2013'
date[27]='03/25/2013'
date[28]='04/01/2013'
date[29]='04/08/2013'
date[30]='04/15/2013'

url='http://www.teamrankings.com/ajax/league/v3/rankings_controller.php'

param='type=detail&league=ncb&rating_id=514&season_id=311&cat_type=2&view=team_v2&view_type=team&table_view=team_v2&force_period_id=&is_rpi_ranking=1&date='

echo "${#date[@]}"

for ((i=1; i<${#date[@]}; i++)); do
  ENCODEDDATE=$(php -r "echo urlencode(\"${date[i]}\");")
  content=`curl --data $param$ENCODEDDATE $url`
  echo "$content" > week-$i.html
done










